@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}
@model Application.Pocos.LoginPoco

<p class="auth-card-description">Log into your account</p>
<div class="form-center">
    <form id="loginForm" method="POST" action="/Account/Login">
        <div class="form-group">
            <input class="form-control" asp-for="Email" placeholder="Your Email *" />
            <span asp-validation-for="Email" class="invalid-feedback" data-sb-feedback="email:required">An email is required.</span>
            <span asp-validation-for="Email" class="invalid-feedback" data-sb-feedback="email:email">Email is not valid.</span>
        </div>
        <div class="form-group mb-4">
            <input class="form-control" asp-for="Password" placeholder="Your Password *" />
        </div>
        <div class="button-center">
            <button type="submit" class="btn btn-block register-btn mb-4 text-white">Login</button>
        </div>
    </form>
</div>
<p class="login-card-footer-text">Don't have an account? <a href="Register" class="text-reset">Register here</a></p>
<nav class="login-card-footer-nav">
    <a href="#!">Terms of use.</a>
    <a href="#!">Privacy policy</a>
</nav>