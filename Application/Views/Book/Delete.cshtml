@model Application.Pocos.BookPoco

@{
	ViewData["Title"] = "Confirm Delete Book";
}

<section class="page-section bg-light d-flex align-items-center justify-content-center" id="delete-book">
	<div class="container bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				<div class="card text-center d-flex align-items-center justify-content-center p-3">
					<div class="card-body p-3">
						<h5 class="card-title pb-3">Confirm Delete</h5>
						<p class="card-text pb-3">Are you sure you want to delete this book?</p> 
						<p class="card-text pb-3">This action is <b>irreversible</b> and will permanently remove the book from the system.</p>
						<form id="confirmDeleteBook" method="POST" asp-controller="Book" asp-action="DeleteConfirmed">
							<input type="hidden" name="isbn" value="@Model.Isbn" />
							<div class="text-center">
								<button class="btn btn-danger btn-lg me-3" type="submit">Confirm</button>
								<a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

