@model Application.Pocos.BookPoco

@{
	ViewData["Title"] = "Confirm Delete Book";
}

<section class="page-section bg-light d-flex align-items-center justify-content-center" id="delete-book">
	<div class="container bg-light">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				<div class="card text-center">
					<div class="card-body">
						<h5 class="card-title">Confirm Delete</h5>
						<p class="card-text">Are you sure you want to delete this book? This action is irreversible and will permanently remove the book from the system. Please confirm your decision below.</p>
						<form id="confirmDeleteBook" method="POST" asp-controller="Book" asp-action="DeleteConfirmed">
							<input type="hidden" name="isbn" value="@Model.Isbn" />
							<div class="text-center">
								<button class="btn btn-danger btn-lg me-3" type="submit">Confirm Delete</button>
								<a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

