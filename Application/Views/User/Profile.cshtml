@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}
@model Application.Pocos.UserPoco

<section class="page-section bg-light" style="height: 100vh;">
    <div class="container mt-5">
        <div class="row justify-content-center mb-5 py-3">
            <div class="col-md-8">
                <div class="card p-3">
                    <div class="card-body text-center d-flex flex-column justify-content-center">

                        <h4 class="card-title pb-3">My Profile</h4>
                        <div class="d-flex flex-column text-start col-9 align-self-center">
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">First Name:</p>
                                <p>@Model.FirstName</p>
                            </div>
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">Last Name:</p>
                                <p>@Model.LastName</p>
                            </div>
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">Address Line 1:</p>
                                <p>@Model.Address1</p>
                            </div>
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">Address Line 2:</p>
                                <p>@Model.Address2</p>
                            </div>
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">Postal Code:</p>
                                <p>@Model.PostalCode</p>
                            </div>
                            <div class="d-flex flex-row">
                                <p class="fw-semibold col-3">Email:</p>
                                <p>@Model.Email</p>
                            </div>
                        </div>

                        @if (@Model.Blacklisted)
                        {
                            <p class="fw-semibold text-danger py-2">You were forbidden from borrowing books!</p>
                        }

                        <div class="d-flex justify-content-center mt-3">
                            <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary btn-lg mx-2">Edit Profile</a>
                            <a href="@Url.Action("Index", "Borrow")" class="btn btn-secondary btn-lg mx-2">View History</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

